@model OpenOrderFramework.Models.Order
@{
    ViewBag.Title = "P4MCheckout";
}

@if (HttpContext.Current.IsDebuggingEnabled)
{
<link rel="import" href="/Scripts/Lib/p4m-widgets/p4m-checkout/p4m-checkout.html">
<link rel="import" href="/Scripts/Lib/p4m-widgets/p4m-login/p4m-login.html">
}
else
{
    <link rel="import" href="/Scripts/p4m-widget.vulcanized.html">
}

<p4m-checkout use-paypal="true" 
              host-type="@ViewBag.HostType"
              use-gfs-checkout="true" 
              gfs-access-token="@ViewBag.AccessToken" 
              gfs-data="@ViewBag.InitialData" 
              initial-address="@ViewBag.InitialAddress" 
              initial-post-code="@ViewBag.InitialPostCode" 
              initial-country-code="@ViewBag.InitialCountryCode">

</p4m-checkout>
