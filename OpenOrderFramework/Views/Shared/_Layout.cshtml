@using OpenOrderFramework.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simple Shop</title>
    @*Styles.Render("~/Content/css")*@

    <!-- ***** P4M ***** -->
    <!--<script src="https://p4mtestcdn.azureedge.net/pw/webcomponentsjs/webcomponents.min.js"></script>
    <link rel="import" href="https://p4mtestcdn.azureedge.net/pw/p4m-widgets/p4m-login/p4m-login.html" />-->
    <script src="/scripts/lib/webcomponentsjs/webcomponents.min.js"></script>
    <script src="~/Scripts/Lib/websockets/signalr-client-1.0.0-alpha2-final.min.js"></script>
    <link rel="import" href="/scripts/lib/p4m-widgets/p4m-login/p4m-login.html" />
    <!-- ***** P4M ***** -->

    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Content/card.css">
    <link rel="stylesheet" href="~/Content/TestShop.css">
</head>
<body>
        <div class="bs-component">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Isla Clothing", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin Area <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                                    <li>@Html.ActionLink("Catagorie", "Index", "Catagories")</li>
                                    <li>@Html.ActionLink("Analytics", "Index", "Analytics")</li>
                                    <li class="divider"></li>
                                    <li class="dropdown-header">Roles Admin</li>
                                    <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                                    <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                                </ul>
                            </li>
                        }
                        <li>@Html.ActionLink("Shop", "Index", "Items")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">About us <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </li>
                    </ul>

                    @Html.Partial("_LoginPartial", new P4MConsts())

                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - A Simple Shop</p>
            </footer>
        </div>

    

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
