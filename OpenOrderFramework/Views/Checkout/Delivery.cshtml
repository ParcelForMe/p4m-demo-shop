@model OpenOrderFramework.Models.Order

@{
    ViewBag.Title = "Delivery";
}

<h2>Delivery</h2>
@Model.Address

<!--

//Use Razor to generate Action,Controller -> POST URL
//Use Razor to loop over items in cart to produce serialised data


//Use Razor to represent entire Order object as hidden fields

-->

@using (Html.BeginForm(new { @class = "form-horizontal" }))
{

    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName != "OrderDetails")
        {
            @Html.Hidden(property.PropertyName)
        }

    }
    <button type="submit">Next >></button>

}

